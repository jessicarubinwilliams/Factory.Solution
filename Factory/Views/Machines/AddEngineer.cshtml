@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a licensed engineer</h2>

<h4>Add a licensed engineer for @Html.DisplayFor(model => model.MachineName)</h4>

@Html.ValidationSummary(false, "", new { @class = "text-danger" })

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of machines", "Index")</p>